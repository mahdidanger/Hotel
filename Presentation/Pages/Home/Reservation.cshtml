@page
@model Hotel.Pages.Home.ReservationModel
@{
    ViewData["Title"] = "Reservation";
}

<div class="text-center">
    <div class="row">
        <div class="col-md-4 offset-4">
            <form method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Hotels.Name" class="control-label"></label>
                    <input asp-for="Hotels.Name" readonly class="form-control" />
                    <span asp-validation-for="Hotels.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Hotels.Address" class="control-label"></label>
                    <input asp-for="Hotels.Address" readonly class="form-control" />
                    <span asp-validation-for="Hotels.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservation.PersonCount" class="control-label">Person Count</label>
                    <input asp-for="Reservation.PersonCount" class="form-control" />
                    <span asp-validation-for="Reservation.PersonCount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservation.RoomId" class="control-label">Room</label>
                    <input asp-for="Reservation.RoomId" class="form-control" />
                    <span asp-validation-for="Reservation.RoomId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Reserve" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>